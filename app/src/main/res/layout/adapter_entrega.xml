<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/status"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomeMotoristaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/motorista"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numeroNotaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/nota"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destinatarioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/destinatario"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enderecoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/endereco"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dataEntregarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_entrega"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/horarioEntregarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hora_entrega"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:id="@+id/resultadoViagemLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/dataEntregueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data entregue: 11/12/2019" />

                <TextView
                    android:id="@+id/chegadaTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chegada: 22:00" />

                <TextView
                    android:id="@+id/saidaTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SaÃ­da: 22:00" />

                <TextView
                    android:id="@+id/motivoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivo:" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>